{
  "build": {
    "env": {
      "NEXT_PUBLIC_ENV": "production"
    }
  },
  "headers": [
    {
      "source": "/fonts/(.*)\\.woff2",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/cron",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 1 * * *"
    }
  ],
  "functions": {
    "api/cron.js": {
      "memory": 1024,
      "maxDuration": 8
    }
  }
}
