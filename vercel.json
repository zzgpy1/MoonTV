{
  "build": {
    "env": {
      "NEXT_PUBLIC_ENV": "production"
    }
  },
  "routes": [
    {
      "src": "/fonts/.*\\.woff2",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "status": 200
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 1 * * *",
      "timeout": 8
    }
  ],
  "functions": {
    "api/cron.js": {
      "memory": 1024,
      "maxDuration": 8
    }
  }
}
